pipeline
{

    agent any
        tools {
        maven 'M3'
    }
    stages {
      stage('Build')
      {
          steps {
         sh 'mvn clean package -f pom.xml'
      }
          }
   stage('Publish')
      {
          steps {
            nexusPublisher nexusInstanceId: 'nexus-host', nexusRepositoryId: 'releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: '**/JUnitIn28Minutes01/target/junit-example-1.0-SNAPSHOT.jar']], mavenCoordinate: [artifactId: 'jenkins-war', groupId: 'org.jenkins-ci.main', packaging: 'war', version: '2.23']]]
          }
      }
/*   stage('Provision/Devploy application'){
      steps {
             sh 'chmod 755 provision-app.sh'
			 sh './provision-app.sh ${BUILD_NUMBER}'
          }
          }  */
    }
   }
